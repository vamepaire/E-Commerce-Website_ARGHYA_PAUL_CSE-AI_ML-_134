<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wishlist</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="javascripts/addToCart.js"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <div
      class="bg-green-600 w-full h-14 flex justify-between items-center fixed top-0 left-0 z-10"
    >
      <a href="/shopmate" class="text-white text-xl font-semibold ml-10"
        >Home</a
      >
      <h1 class="text-2xl text-white font-bold ml-8">Wishlist</h1>
      <div class="text-white text-xl font-semibold mr-10">
        <span><%= user.User_name%></span>
      </div>
    </div>

    <div class="container mx-auto p-6 mt-14">
      <!-- Wishlist Layout -->
      <div class="flex flex-col w-3/4 mx-auto">
        <% wishlistItems.forEach(function(item) { %>
        <div class="flex items-start bg-white p-4 border-b border-gray-300">
          <!-- Product Image -->
          <img
            src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
            alt="<%= item.product_name %>"
            class="w-20 h-20 object-cover rounded-md"
          />

          <!-- Product Details -->
          <div class="ml-4 flex-grow">
            <h2 class="text-base font-semibold text-gray-700">
              <%= item.product_name %>
            </h2>
            <p class="text-lg font-bold text-gray-800 mt-2">
              â‚¹ <%= item.price.toFixed(2) %>
            </p>
            <div class="mt-2">
              <button
                class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700"
                onclick="moveToCart('<%= item._id %>')"
              >
                Move to Cart
              </button>
              <a href="/removeFromWishList/<%= item._id %>"><button
                class="ml-4 text-red-500 hover:underline"
              >
                Remove
              </button>
            </div></a>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Empty Wishlist Message -->
      <% if (wishlistItems.length === 0) { %>
      <div class="text-center mt-12">
        <h2 class="text-xl font-bold text-gray-700">Your Wishlist is Empty</h2>
        <p class="text-gray-600">
          Add items to your wishlist to see them here!
        </p>
        <a
          href="/shopmate"
          class="inline-block mt-4 px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700"
        >
          Continue Shopping
        </a>
      </div>
      <% } %>
    </div>
  </body>
</html>
