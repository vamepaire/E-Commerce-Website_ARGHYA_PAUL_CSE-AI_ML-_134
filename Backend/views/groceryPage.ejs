<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shopmate</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/flash-message.js" defer></script>
  <script src="/javascripts/slideshow.js" defer></script> 
</head>

<body class="bg-gray-100 font-sans">
  
  <div class="flex min-h-screen">

    <!-- Left Sidebar -->
    <aside class="w-1/6 bg-blue-100 p-6 shadow-md flex flex-col justify-between h-screen fixed">
      <!-- Shopmate title -->
      <div class="mb-6">
        <a href="/shopmate">
          <h1 class="text-3xl font-bold text-blue-800">Shopmate</h1>
        </a>
      </div>

      <!-- My Account section with logo -->
      <div class="mb-6">
        <h2 class="flex items-center text-xl font-semibold mb-4">
          <img src="/images/images.png" alt="My Account Logo" class="w-6 h-6 mr-2 rounded-full"> My Account
        </h2>

        <ul class="space-y-3">
          <li><a href="/cart" class="text-gray-700 hover:text-blue-500"><strong>Cart</strong></a></li>
          <li><a href="/wishlist" class="text-gray-700 hover:text-blue-500"><strong>Wishlist</strong></a></li>
          <li><a href="/orders" class="text-gray-700 hover:text-blue-500"><strong>Orders</strong></a></li>
          <li><a href="/users/logout" class="text-gray-700 hover:text-blue-500"><strong>Logout</strong></a></li>
        </ul>
      </div>

      <!-- Categories section -->
      <div class="border-t-4 border-zinc-400 py-2"></div>

      <div>
        <h2 class="text-xl font-semibold mb-4">Categories</h2>
        <ul class="space-y-3">
          <li><a href="/category/grocery" class="text-gray-700 hover:text-blue-500"><strong>Grocery</strong></a></li>
          <li><a href="/category/mobile" class="text-gray-700 hover:text-blue-500"><strong>Mobile</strong></a></li>
          <li><a href="/category/fashion" class="text-gray-700 hover:text-blue-500"><strong>Fashion</strong></a></li>
          <li><a href="/category/electronics" class="text-gray-700 hover:text-blue-500"><strong>Electronics</strong></a></li>
          <li><a href="/category/home-furniture" class="text-gray-700 hover:text-blue-500"><strong>Home & Furniture</strong></a></li>
        </ul>
      </div>
     

      <footer class="mt-auto border-t-2 border-gray-500 pt-3">
        <p class="text-gray-600 text-sm text-center">© 2024 Shopmate. All rights reserved.</p>
        <ul class="flex justify-center space-x-4 mt-2">
          <li><a href="/privacy-policy" class="text-gray-700 hover:text-blue-500 text-sm">Privacy Policy</a></li>
          <li><a href="/terms" class="text-gray-700 hover:text-blue-500 text-sm">Terms of Service</a></li>
        </ul>
      </footer>
    </aside>



    <!-- Main Content Area for Product Display -->
    <main class="w-3/4 ml-[16.666%] py-5 px-3 bg-green-50">
     <div class="relative py-20 rounded-md overflow-hidden postion-sticky z-10">
       <div id="slideContainer" class="container mx-auto text-center absolute inset-0 flex transition-transform duration-500 h-full ">
         <!-- Slide 1 -->
         <div class="slide w-full h-full  flex flex-col items-center justify-center text-white active">
           <img src="/images/grocery3.jpg" alt="Welcome to ShopMate" class="h-full w-full object-cover opacity-100" />
           <div class="absolute inset-0 flex flex-col items-center justify-center text-black">
             <!-- Overlay for text -->
             <h1 class="text-4xl font-semibold mb-4">Welcome to ShopMate</h1>
             <p class="text-xl font-semibold mb-4">Find the best products at unbeatable prices. Shop now and enjoy exclusive offers!</p>
           </div>
         </div>

         <!-- Slide 2 -->
         <div class="slide w-full h-full flex flex-col items-center justify-center text-white">
           <img src="/images/electronics.jpg" alt="New Arrivals" class="h-full w-full object-cover opacity-100" />
           <div class="absolute inset-0 flex flex-col items-center justify-center text-white">
             <!-- Overlay for text -->
             <h1 class="text-4xl font-semibold mb-4">New Arrivals</h1>
             <p class="text-xl font-semibold mb-4">Explore the latest trends and enjoy great discounts!</p>
           </div>
         </div>

         <!-- Slide 3 -->
         <div class="slide w-full h-full flex flex-col items-center justify-center text-white">
           <img src="/images/tshirt.jpg" alt="Seasonal Discounts" class="h-full w-full object-cover opacity-100" />
           <div class="absolute inset-0 flex flex-col items-center justify-center text-black">
             <!-- Overlay for text -->
             <h1 class="text-4xl font-semibold mb-4">Seasonal Discounts</h1>
             <p class="text-xl font-semibold mb-4">Shop your favorites with limited-time seasonal deals!</p>
           </div>
         </div>
       </div>
     </div>




      <div class="pt-6 ">
        <div class="border-t-2 border-dotted border-black py-2"></div>
        <h1 class="text-2xl font-semibold text-gray-800 mb-6"><%= category %></h1>

       <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 -gap-4 gap-y-6 ">
         <% product.forEach(function(product) {%>
            <div class="relative rounded-lg shadow-sm overflow-hidden flex flex-col items-center h-50  w-48 border border-1 border-black border-dotted ">
             <div class=" flex bg-[<%= product.bgcolor%>] w-full item-center justify-center transition-transform duration-100 hover:scale-105 ">
               <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image" class="w-full h-[9rem] " />
             </div>

              <div class="bg-[<%= product.panel_color %>] w-full p-2 -mt-1 text-[<%= product.text_color%>]">
                <h2 class="text-md font-semibold text-gray-800  line-clamp-1"><%= product.product_name %></h2>
                <div class="flex items-center justify-between">
                  <p class="text-md ">₹<%= product.price.toFixed(2) %></p>
                  
                  <a href="/addtocart/<%= product._id %>" method>
                    <button type="button" class="flex items-center justify-center w-10 h-10 bg-green-400 text-white rounded-full hover:bg-green-600 -mb-8">
                      <span class="text-3xl font-semibold">+</span>
                    </button>
                  </a>

                </div>
                <div>
                  <p class="text-md  mb-2">Discount : <%= product.discount || 0 %>%</p>
                </div>

              </div>
            </div>
          <%})%>
       </div>

        </div>
      </div>
    </main>
  </div>
</body>
