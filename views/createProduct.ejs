<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Adding Page</title>
    <link href="/styles.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="/javascripts/flash-message.js" defer></script>
  </head>

  <body
    class="bg-gradient-to-r from-indigo-50 via-white to-indigo-100 h-screen flex justify-center items-center"
  >
    <% if (message && message.length > 0) { %>
    <div
      id="flash-message"
      class="z-10 bg-green-500 text-white font-semibold p-2 rounded-md mb-4 w-30 absolute top-5 left-1/2 transform -translate-x-1/2 shadow-lg"
    >
      <h2><%= message %></h2>
    </div>
    <% } %>

    <div
      class="bg-white shadow-2xl rounded-lg w-full max-w-5xl p-8 flex items-stretch border-t-8 border-blue-400"
    >
      <!-- Product Details Section -->
      <form
        action="/products/create"
        method="POST"
        class="w-full flex flex-wrap gap-8"
        enctype="multipart/form-data"
      >
        <div class="flex-1 p-6 space-y-6">
          <h2 class="text-3xl font-semibold text-center text-indigo-800 mb-6">
            Product Details
          </h2>

          <!-- Product Name -->
          <input
            type="text"
            name="product_name"
            placeholder="Product Name"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />

          <select
            name="category"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          >
            <option value="" disabled selected>Select Category</option>
            <option value="Grocery">Grocery</option>
            <option value="Mobile">Mobile</option>
            <option value="Fashion">Fashion</option>
            <option value="Electronics">Electronics</option>
            <option value="Home & furniture">Home & Furniture</option>
          </select>

          <input
            type="number"
            name="price"
            placeholder="Price"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />

          <!-- Discount -->
          <input
            type="number"
            name="discount"
            placeholder="Discount"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
          />

          <!-- Product Image -->
          <input
            type="file"
            name="image"
            accept="image/*"
            placeholder="file_name"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />

          <!-- Product Description -->
          <textarea
            id="product-desc"
            name="product_desc"
            rows="5"
            placeholder="Add Description Of the Product"
            class="w-full p-3 mt-2 border border-indigo-300 rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          ></textarea>
        </div>

        <!-- Divider -->
        <div class="flex items-center justify-center px-4 my-auto">
          <div
            class="bg-indigo-600 text-white rounded-full w-12 h-12 flex items-center justify-center shadow-lg"
          >
            <span class="text-sm font-semibold">and</span>
          </div>
        </div>

        <!-- Panel Details Section -->
        <div class="flex-1 p-6 space-y-6">
          <h2 class="text-3xl font-semibold text-center text-indigo-800 mb-6">
            Panel Details
          </h2>

          <input
            type="text"
            name="bgcolor"
            placeholder="Background Color"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />
          <input
            type="text"
            name="panel_color"
            placeholder="Panel Color"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />
          <input
            type="text"
            name="text_color"
            placeholder="Text Color"
            class="w-full px-5 py-3 border border-indigo-300 rounded-lg focus:outline-none focus:border-indigo-600 text-lg"
            required
          />
        </div>

        <!-- Submit Button -->
        <div class="w-full flex justify-center mt-3">
          <button
            type="submit"
            class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-full hover:bg-indigo-700 transition-colors text-lg shadow-md mr-5"
          >
            Submit
          </button>
          <a
            href="/owners/ownersPage"
            class="px-8 py-3 bg-purple-600 text-white font-semibold rounded-full hover:bg-indigo-700 transition-colors text-lg shadow-md"
            >Back To Home</a
          >
        </div>
      </form>
    </div>
  </body>
</html>
